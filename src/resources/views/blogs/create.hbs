<div class="mt-4">
  <h3 class="d-flex align-items-center justify-content-center">Create Blog</h3>
  <form method="POST" action="/blogs/store">
    <div class="form-group">
      <label for="name" class="form-label fw-medium"> Blog Title </label>
      <input type="text" class="form-control" id="name" name="title" />
    </div>
    <div class="form-group">
      <label for="description" class="form-label fw-medium"> Description </label>
      <input type="text" class="form-control" id="description" name="description" />
    </div>
    <div class="form-group">
      <label for="content" class="form-label fw-medium"> Content </label>
      <input type="text" class="form-control" id="content" name="content" />
    </div>
    <div class="form-group">
      <label for="image" class="form-label fw-medium"> Image </label>
      <input type="text" class="form-control" id="image" name="image" />
    </div>
    <div class="form-group">
      <label for="author" class="form-label fw-medium"> Author </label>
      <input type="text" class="form-control" id="author" name="author" />
    </div>
    <div class="form-group">
      <label for="quote" class="form-label fw-medium"> Quote </label>
      <input type="text" class="form-control" id="quote" name="quote" />
    </div>
    <div class="form-group">
      <label for="tags" class="form-label fw-medium"> Tags </label>
      <input type="text" class="form-control" id="tags" name="tags" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">CREATE BLOG</button>
  </form>
</div>
